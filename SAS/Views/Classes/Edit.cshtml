@model SAS.Models.Class

@{
    ViewData["Title"] = "Edit";
}

<div class="content-header" style="padding-left:250px; color:black;padding-bottom: 40px;padding-top: 10px;">
</div>

<div class="mainbody" style="padding-left:250px;">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Class_id" />
            <div class="form-group">
                <label asp-for="Class_name" class="control-label"></label>
                <input asp-for="Class_name" class="form-control" />
                <span asp-validation-for="Class_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Building_number" class="control-label"></label>
                <input asp-for="Building_number" class="form-control" />
                <span asp-validation-for="Building_number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
