@model IEnumerable<SAS.Models.Teacher>

@{
    ViewData["Title"] = "Index";
}

<div class="content-header" style="padding-left:250px; color:black;padding-bottom: 40px;padding-top: 10px;">
    <a asp-action="Create" asp-controller="Teachers" class="btn btn-primary" style="float:right;"> Add New  </a>
</div>

<div class="mainbody" style="padding-left:250px;">
    <table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Teacher_fname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher_lname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone_no)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher_fname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher_lname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone_no)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Teacher_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Teacher_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Teacher_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>