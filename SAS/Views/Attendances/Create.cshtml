@model SAS.Models.Attendance

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="content-header" style="padding-left:250px; color:black;padding-bottom: 40px;padding-top: 10px;">
    @*<button class="btn btn-primary" style="float:right;"> Add New  </button>*@

</div>

<div class="mainbody" style="padding-left:250px;">

    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-6">
                <label asp-for="Stud_id" class="control-label"></label>
                <select asp-for="Stud_id" class ="form-control" asp-items="ViewBag.Stud_id"></select>
            </div>
                <div class="form-group col-6">
                <label asp-for="Academic_y_id" class="control-label"></label>
                <select asp-for="Academic_y_id" class ="form-control" asp-items="ViewBag.Academic_y_id"></select>
            </div>
                <div class="form-group col-6">
                <label asp-for="Department_id" class="control-label"></label>
                <select asp-for="Department_id" class ="form-control" asp-items="ViewBag.Department_id"></select>
            </div>
                <div class="form-group col-6">
                <label asp-for="Enrollment_id" class="control-label"></label>
                <select asp-for="Enrollment_id" class ="form-control" asp-items="ViewBag.Enrollment_id"></select>
            </div>
                <div class="form-group col-6">
                <label asp-for="Faculity_id" class="control-label"></label>
                <select asp-for="Faculity_id" class ="form-control" asp-items="ViewBag.Faculity_id"></select>
            </div>
                <div class="form-group col-6">
                <label asp-for="Semister_id" class="control-label"></label>
                <select asp-for="Semister_id" class ="form-control" asp-items="ViewBag.Semister_id"></select>
            </div>
                <div class="form-group col-6">
                <label asp-for="Attendance_date" class="control-label"></label>
                <input asp-for="Attendance_date" class="form-control" />
                <span asp-validation-for="Attendance_date" class="text-danger"></span>
            </div>
                <div class="form-group col-6">
                <label asp-for="Attendance_time" class="control-label"></label>
                <input asp-for="Attendance_time" class="form-control" />
                <span asp-validation-for="Attendance_time" class="text-danger"></span>
            </div>
                <div class="form-group col-6">
                <label asp-for="Status" class="control-label"></label>
                @Html.DropDownList("Status", Html.GetEnumSelectList<AttaStats>(), " -- Select Attendance status -- ", new {@class ="form-control"})

                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
                <div class="form-group col-6">
                <label asp-for="Remark" class="control-label"></label>
                <input asp-for="Remark" class="form-control" />
                <span asp-validation-for="Remark" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
